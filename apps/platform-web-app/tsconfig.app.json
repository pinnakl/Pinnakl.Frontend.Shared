{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "allowSyntheticDefaultImports": true,
    "types": [
      "googlemaps",
      "lodash",
      "jasmine"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stub.ts",
    "src/environments/environment.prod.ts",
    "src/environments/environment.dev.ts",
    "src/app/securities/securities-test-helper.ts"
  ]
}
